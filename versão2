let d = read_line() in
let g = read_line() in
let x= String.length d in
let y= String.length g in
let z=x+1 in
let v=x+1 in

let m = Array.make_matrix z v 0 in

let c=ref 0 in

let ()= 
  for i=1 to x do
    for j=1 to y do 
      let t= m.(i).(j) in
      if (i=0|| j=0) then m.(i).(j) <- 0
      else if d.[i-1] = g.[i-1] then  
      begin
        m.(i).(j) <- m.(i).(j) + 1 
        c:= max c t
      end
      else m.(i).(j) <- 0

Printf.printf "%d\n" !c
